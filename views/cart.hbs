<div class="entry mt-4">
    {{#if productos}}
    <div class="  p-1 border border-dark border-3 rounded">
        <table class="  table table-resposive ">
            <thead class="thead-dark text-light bg-primary">
                <tr>
                    <th scope="col">Carrito</th>
                    <th scope="col">ObjectID</th>
                    <th scope="col">Id productos</th>
                    <th scope="col">cuantity</th>
                    <th scope="col">Imagen</th>
                </tr>
            </thead>
            <tbody id="prodDisplay">
                {{#each productos}}
                <tr class="table">
                    <th>{{ this.id }}</th>
                    <td>{{ this._id }}</td>
                    {{#each this.productos}}
                    <td>{{ this.producto }}</td>
                    <td>{{ this.quantity }}</td>
                    {{/each}}
                    <td><img src="{{ this.thumbnail }}" width="50"></td>
                </tr>
                {{/each}}
            </tbody>
        </table>
        {{else}}
        <br>
        <h3> No hay ning√∫n producto agregado. </h3>
        {{/if}}
    </div>
</div>